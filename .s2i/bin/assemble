#!/bin/sh

/usr/local/s2i/assemble
# install appdynamics agent
curl -H "Accept: application/zip" https://codeload.github.com/juantimonescalona/poc_appdynamics_tomcat/zip/master -o /deployments/appdynamics.zip

pushd /deployments
unzip appdynamics.zip
    mv poc_appdynamics_tomcat-master/src/main/docker/appdynamics /deployments
    rm -rf poc_appdynamics_tomcat-master
    rm -f appdynamics.zip
popd
